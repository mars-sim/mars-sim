			<equipment type="Barrel" number="10" />
			<equipment type="Bag" number="60" />
			<equipment type="Specimen Box" number="60" />
			<resource type="waste water" amount="300.0" />
			<resource type="carbon dioxide" amount="200.0" />
			<part-package name="package 3" number="1" />
			<resupply>
				<resupply-mission name="Mars Direct Base resupply 3" arrival-time="668.0" />
			</resupply>
		</template>
		
		<template name="Alpha Base (MD phase 4)">
			<building type="Atmospheric Processor" number="1" />

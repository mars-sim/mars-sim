		<sickbay tech-level="3" beds="2" />
		<airlock xloc="-1.25" yloc="0.0" interior-xloc="-.75" interior-yloc="0.0" exterior-xloc="-2.75" 
		exterior-yloc="0.0" />
		<activity>
			<activity-spot type="operator" xloc=".45" yloc="4.3" />
			<activity-spot type="passenger" xloc="-.45" yloc="4.3" />

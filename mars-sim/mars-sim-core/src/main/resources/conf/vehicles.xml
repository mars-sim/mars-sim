			<part name="backhoe" />
			<part name="soil compactor" />
			<part name="drilling rig" />
			<part name="crane boom" />
		</part-attachment>
		<activity>
			<activity-spot type="operator" xloc="0.0" yloc=".13" />
		</activity>
	</vehicle>
	

<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  	<modelVersion>4.0.0</modelVersion>
  	<parent>
    	<artifactId>mars-sim</artifactId>
    	<groupId>net.sf</groupId>
    	<version>3.08-SNAPSHOT</version>
	</parent>
	<groupId>net.sf.mars-sim</groupId>
	<artifactId>mars-sim-main</artifactId>
	<name>mars-sim-main</name>
        <packaging>jar</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>webstart-maven-plugin</artifactId>
				<version>1.0-beta-6</version>
				<configuration>
					<sign>
						<keystore>../../../mars-sim.store</keystore>
						<keypass>marssim</keypass>
						<storepass>marssim</storepass>
						<alias>mars-sim</alias>
					</sign>
					<jnlp>
						<outputFile>mars-sim.jnlp</outputFile>
						<mainClass>org.mars_sim.msp.MarsProject</mainClass>
					</jnlp>
				</configuration>
			</plugin>
			<plugin>
        		<groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-jar-plugin</artifactId>
        		<version>2.6</version>
        		<configuration>
          			<archive>
           				<manifest>
            				<addClasspath>true</addClasspath>
              				<mainClass>org.mars_sim.msp.MarsProjectStarter</mainClass>
            			</manifest>
          			</archive>
        		</configuration>
      		</plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.5.5</version>
                <configuration>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <archive>
                        <manifest>
                            <mainClass>org.mars_sim.msp.MarsProjectStarter</mainClass>
                        </manifest>
                    </archive>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id> <!-- this is used for inheritance merges -->
                        <phase>package</phase> <!-- append to the packaging phase. -->
                        <goals>
                            <goal>single</goal> <!-- goals == mojos -->
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>jdeb</artifactId>
                <groupId>org.vafer</groupId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jdeb</goal>
                        </goals>
                        <configuration>
                            <dataSet>
                                <data>
                                    <src>${project.build.directory}/${project.build.finalName}-jar-with-dependencies.jar</src>
                                    <type>file</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/mars-sim-main</prefix>
                                    </mapper>
                                </data>
                                <data>
                                	<src>${project.basedir}/src/deb/mars-sim</src>
                                	<type>file</type>
                                	<mapper>
                                        <type>perm</type>
                                        <prefix>/usr/bin</prefix>
                                        <filemode>755</filemode>
                                    </mapper>
                                </data>
                                <data>
                                	<src>${project.basedir}/src/deb/copyright/copyright</src>
                                	<type>file</type>
                                	<mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/doc/mars-sim-main</prefix>
                                    </mapper>
                                </data>
                                <data>
                                	<src>${project.basedir}/src/deb/changelog.gz</src>
                                	<type>file</type>
                                	<mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/doc/mars-sim-main</prefix>
                                    </mapper>
                                </data>
                                <data>
                                	<src>${project.basedir}/src/deb/marsicon.png</src>
                                	<type>file</type>
                                	<mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/doc/mars-sim-main</prefix>
                                    </mapper>
                                </data>
                                <data>
                                	<src>${project.basedir}/src/deb/mars-sim.desktop</src>
                                	<type>file</type>
                                	<mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/applications</prefix>
                                    </mapper>
                                </data>
                                <data>
                                	<src>${project.basedir}/src/deb/man/mars-sim.1.gz</src>
                                	<type>file</type>
                                	<mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/man/man1</prefix>
                                    </mapper>
                                </data>
                            </dataSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
		</dependency>	
		<dependency>
			<groupId>net.sf.mars-sim</groupId>
			<artifactId>mars-sim-ui</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sf.mars-sim</groupId>
			<artifactId>mars-sim-mapdata</artifactId>
			<version>${project.version}</version>
		</dependency>
	    <dependency>
	    	<groupId>net.sf.mars-sim</groupId>
	    	<artifactId>mars-sim-network</artifactId>
	    	<version>${project.version}</version>
	    </dependency>
	</dependencies>
</project>

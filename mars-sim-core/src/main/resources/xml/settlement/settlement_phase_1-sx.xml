<?xml version = "1.0" encoding = "UTF-8" standalone = "yes" ?>
<template xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="settlement.xsd"
    name="Phase 1-SX" default-population="8" description="Phase 1 base for Space X"
	number-of-robots="4" sponsor="SPACEX">

    <building id="LH0" type="Lander Hab" xloc="0.0" yloc="0.0"
        facing="180.0">
        <connection-list>
            <connection id="MCD0" hatch-facing="east" />
        </connection-list>
    </building>

   <building id="MCD0" type="Corridor 3x9" xloc="-6.0" yloc="0.0"
        facing="0.0">
        <connection-list>
            <connection id="LH0" hatch-facing="west" />
            <connection id="IG0" hatch-facing="east" />
            <connection id="EVA" hatch-facing="south" />
        </connection-list>
    </building>
    
    <building id="EVA" type="EVA Airlock" xloc="-6.0" yloc="-7.5"
        facing="270.0">
        <connection-list>
            <connection id="MCD0" hatch-facing="north" />
        </connection-list>
    </building>


    <building id="IG0" type="Inflatable Greenhouse" xloc="-12.0" yloc="0.0"
        facing="270.0">
        <connection-list>
            <connection id="MCD0" hatch-facing="west" />
            <connection id="C0" hatch-facing="east" />
        </connection-list>
    </building>

   <building id="C0" type="Core C" xloc="-18.0" yloc="0.0"
        facing="0.0">
        <connection-list>
            <connection id="IG0" hatch-facing="west" />
            <connection id="W0" hatch-facing="east" />
        </connection-list>
    </building>

    <building id="W0" type="Workshop" xloc="-24.0"
        yloc="0.0" facing="90.0">
        <connection-list>
            <connection id="C0" hatch-facing="west" />
        </connection-list>
    </building>
 
 
    <!-- Building Packages -->
    <building-package name="Storage Set 1"/>
   	<building-package name="ERV Set 1"/>
   	<building-package name="Air Set 1 - 1x1"/>
   	<building-package name="Sabatier Set 1 - 1x1"/>
	<building-package name="Solar Set 1 - 1x9"/>
	<building-package name="Solar Thermal Set 1 - 1x3"/>
	<building-package name="Kilo Set 1 - 1x2"/>
 	<building-package name="Brine Water Well Set 1 - 1x1"/>
 
    <vehicle type="Explorer Rover" number="2" />
    <vehicle type="Light Utility Vehicle" number="1" />
    <vehicle type="Delivery Drone" number="1" />

    <!-- Robots -->
    <robot name="TeslaBot-G" type="GardenBot" model="Advanced"/>
    <robot name="TeslaBot-R" type="RepairBot" model="Advanced"/>
    <robot name="TeslaBot-MR" type="MakerBot" model="Advanced"/> 
        
    <equipment type="EVA Suit" number="8" />

    <!-- Containers-->
	<equipment type="barrel" number="40" />
	<equipment type="bag" number="40" />
	<equipment type="gas canister" number="40" />		
	<equipment type="large bag" number="40" />
	<equipment type="specimen box" number="40" />
    <equipment type="thermal bottle" number="8" />	
 	<equipment type="wheelbarrow" number="12" />

    <!-- Bins -->
	<bin type="pot" number="20" />
	<bin type="crate" number="20" />
	<bin type="basket" number="20" />
		
    <!-- Life Support Resources -->
	<resource type="food" amount="720" />
	<resource type="water" amount="3600" />
	<resource type="oxygen" amount="1440" />

    <part-package name="Standard Part Package 1" number="1" />

    <resupply>
        <resupply-mission name="Food Delivery" manifest-name="Food Resupply 1">
            <schedule firstSol="40" frequency="80" />
        </resupply-mission>
        <resupply-mission name="Phase 1 Delivery" manifest-name="Resupply for Phase 1">
            <schedule firstSol="668"/>
        </resupply-mission>
    </resupply>
</template>